# =============================================================================
# KubeSage LangGraph Chat Service Configuration
# =============================================================================

# Database Configuration
POSTGRES_USER=kubesage
POSTGRES_PASSWORD=linux
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=n_user_db

# LLM Configuration
URL=https://api.openai.com/v1
MODEL=gpt-3.5-turbo
KEY=your-openai-api-key-here

# API Keys for Authentication
ADMIN_API_KEY=admin-secret-key-12345
USER_API_KEY=user-secret-key-67890

# JWT Configuration
SECRET_KEY=your-jwt-secret-key-here-make-it-long-and-secure
JWT_SECRET_KEY=your-jwt-secret-key-here-make-it-long-and-secure
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
USER_SERVICE_URL=https://localhost:8001

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO

# Chat Configuration
MAX_MESSAGE_LENGTH=50000
MAX_MESSAGES_PER_SESSION=100
SESSION_TIMEOUT_HOURS=24

# Server Configuration
HOST=0.0.0.0
PORT=8002

# Rate Limiting
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=minute

# RabbitMQ Configuration (Optional)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Kubernetes Configuration (Optional)
KUBECONFIG_PATH=/home/user/.kube/config
KUBECTL_TIMEOUT=60

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Development Settings
RELOAD_ON_CHANGE=true
ENABLE_DOCS=true
CORS_ORIGINS=*

# Production Settings (Override in production)
# DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# ENABLE_DOCS=false
